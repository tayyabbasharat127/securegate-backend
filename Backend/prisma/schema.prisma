generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  email       String        @unique
  name        String?
  username    String?
  password    String
  createdAt   DateTime      @default(now())

  loginEvents LoginEvent[]
  auditLogs   AuditLog[]
}

model LoginEvent {
  id          String      @id @default(uuid())
  userId      String
  ipAddress   String
  country     String?
  city        String?
  device      String?
  loginTime   DateTime    @default(now())
  status      String      @default("SUCCESS")

  user        User        @relation(fields: [userId], references: [id])
  riskScore   RiskScore?
  securityActions SecurityAction[]
  auditLogs   AuditLog[]

  @@index([userId])
  @@index([loginTime])
  @@index([ipAddress])
}

model RiskScore {
  id            String       @id @default(uuid())
  loginEventId  String       @unique
  score         Int
  reason        String
  createdAt     DateTime     @default(now())

  loginEvent    LoginEvent   @relation(fields: [loginEventId], references: [id])
}

model SecurityAction {
  id            String       @id @default(uuid())
  loginEventId  String
  actionType    String       @default("NONE")
  details       String?
  createdAt     DateTime     @default(now())

  loginEvent    LoginEvent   @relation(fields: [loginEventId], references: [id])
}

model AuditLog {
  id            String       @id @default(uuid())
  userId        String?
  loginEventId  String?
  action        String       @default("UNKNOWN")
  createdAt     DateTime     @default(now())

  user          User?        @relation(fields: [userId], references: [id])
  loginEvent    LoginEvent?  @relation(fields: [loginEventId], references: [id])
}
