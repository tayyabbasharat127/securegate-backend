generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id String @id @default(uuid())
  email String  @unique
  name String?
  createdAt DateTime @default(now())
  loginEvents LoginEvent[]  // one to many 
  auditLogs AuditLog[] 

}
model LoginEvent {
  id String  @id @default(uuid())
  userId String 
  ipAddress String 
  location String?
  device String?
 loginTime DateTime  @default(now())
  status String
   user User @relation(fields:[userId],references:[id])
 riskScores RiskScore[]
  securityActions SecurityAction[]
  auditLogs AuditLog[]

}
model RiskScore {
  id String    @id @default(uuid())
  loginEventId String 
  score Int
  reason String 
 createdAt   DateTime @default(now())
  loginEvent LoginEvent @relation(fields:  [loginEventId],references: [id])
}
model SecurityAction {
  id  String @id @default(uuid())
  loginEventId String 
  actionType String 
  details String?
  createdAt DateTime @default(now())
  loginEvent LoginEvent  @relation(fields:  [loginEventId],references: [id])
}
model AuditLog {
  id String @id @default(uuid())
  userId String?
  loginEventId String?
  action String 
  createdAt DateTime @default(now())
  user User? @relation(fields: [userId],references:[id])
  loginEvent LoginEvent?  @relation(fields: [loginEventId], references: [id])
}